{

  "manifest_version": 2,
  "name": "Kwote",
  "version": "0.2",
  "description": "Kwote is a simple extension that allows you to highlight text on a webpage and save it.",

  "browser_action": {
    "default_title": "Kwote",
    "default_popup": "popup/index.html"
  },

  "permissions": ["storage", "tabs"],
  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["kwote.js"]
    }
  ]

}


